<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.cvbuilder2.controllers.formcontroller"
            prefWidth="700" prefHeight="600"
            stylesheets="@styles.css"
            styleClass="form-root">

    <center>
        <GridPane hgap="20" vgap="18" styleClass="form-container">
            <padding>
                <Insets top="25" right="25" bottom="25" left="25"/>
            </padding>

            <columnConstraints>
                <ColumnConstraints percentWidth="30"/>
                <ColumnConstraints percentWidth="70"/>
            </columnConstraints>

            <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="form-label"/>
            <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="form-label"/>
            <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Phone:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="form-label"/>
            <TextField fx:id="phoneField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Address:" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="form-label"/>
            <TextField fx:id="addressField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Education:" GridPane.rowIndex="4" GridPane.columnIndex="0" styleClass="form-label"/>
            <TextArea fx:id="educationArea" prefRowCount="3" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Skills:" GridPane.rowIndex="5" GridPane.columnIndex="0" styleClass="form-label"/>
            <TextArea fx:id="skillsArea" prefRowCount="3" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <Label text="Experience:" GridPane.rowIndex="6" GridPane.columnIndex="0" styleClass="form-label"/>
            <TextArea fx:id="experienceArea" prefRowCount="3" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

            <Label text="Projects:" GridPane.rowIndex="7" GridPane.columnIndex="0" styleClass="form-label"/>
            <TextArea fx:id="projectsArea" prefRowCount="3" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

        </GridPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="25" styleClass="form-buttons">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Button fx:id="backBtn" text="Back" prefWidth="120"/>
            <Button fx:id="generateBtn" text="Generate CV" prefWidth="170"/>
        </HBox>
    </bottom>

</BorderPane>
