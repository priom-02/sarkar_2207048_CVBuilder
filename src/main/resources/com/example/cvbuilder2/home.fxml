<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400" prefWidth="600"
            styleClass="home-root"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.cvbuilder2.controllers.homecontroller"
            stylesheets="@styles.css">

    <center>
        <VBox alignment="CENTER" spacing="20" styleClass="home-container">

            <Label text="Welcome to CV Builder!"
                   styleClass="home-title"/>

            <Button fx:id="createBtn"
                    text="Create New CV"
                    prefWidth="200"
                    styleClass="primary-btn"/>
        </VBox>
    </center>

</BorderPane>
