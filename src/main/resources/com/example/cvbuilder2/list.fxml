<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.cvbuilder2.controllers.listcontroller"
            prefWidth="800" prefHeight="600"
            stylesheets="@styles.css" >

    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" padding="10">
            <Label text="Saved CVs" style="-fx-font-size:20px; -fx-font-weight:bold;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="New CV" fx:id="newBtn"/>
            <Button text="Refresh" fx:id="refreshBtn"/>
            <Button text="Export JSON" fx:id="exportBtn"/>
            <Button text="Import JSON" fx:id="importBtn"/>
        </HBox>
    </top>

    <center>
        <TableView fx:id="table" prefWidth="780" prefHeight="520">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                <TableColumn fx:id="colName" text="Name" prefWidth="180"/>
                <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
                <TableColumn fx:id="colPhone" text="Phone" prefWidth="140"/>
                <TableColumn fx:id="colActions" text="Actions" prefWidth="180"/>
            </columns>
        </TableView>
    </center>

</BorderPane>
