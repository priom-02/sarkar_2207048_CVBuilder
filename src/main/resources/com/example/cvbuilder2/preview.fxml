<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.cvbuilder2.controllers.previewcontroller"
            prefWidth="700" prefHeight="600"
            stylesheets="@styles.css"
            styleClass="preview-root">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="preview-header">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <Button fx:id="backBtn" text="Back" styleClass="back-btn"/>
            <Label text="CV Preview" styleClass="preview-title"/>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" styleClass="preview-scroll">
            <VBox spacing="20" styleClass="preview-content">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <Label fx:id="nameLabel" styleClass="preview-name"/>

                <VBox spacing="8">
                    <Label fx:id="emailLabel" styleClass="info-label"/>
                    <Label fx:id="phoneLabel" styleClass="info-label"/>
                    <Label fx:id="addressLabel" styleClass="info-label"/>
                </VBox>

                <Separator/>

                <VBox spacing="12">
                    <Label text="Education" styleClass="section-title"/>
                    <Label fx:id="educationLabel" wrapText="true" styleClass="section-text"/>
                </VBox>

                <Separator/>

                <VBox spacing="12">
                    <Label text="Skills" styleClass="section-title"/>
                    <Label fx:id="skillsLabel" wrapText="true" styleClass="section-text"/>
                </VBox>

                <Separator/>

                <VBox spacing="12">
                    <Label text="Experience" styleClass="section-title"/>
                    <Label fx:id="experienceLabel" wrapText="true" styleClass="section-text"/>
                </VBox>

                <Separator/>

                <VBox spacing="12">
                    <Label text="Projects" styleClass="section-title"/>
                    <Label fx:id="projectsLabel" wrapText="true" styleClass="section-text"/>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
